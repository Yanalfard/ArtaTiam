@model DataLayer.Models.TblBanner
<div class="modal-header">
    <h6 class="modal-title" id="modalCenterTitle">
        ویرایش اسلایدر
    </h6>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<form asp-action="Edit" asp-controller="Country" asp-area="Admin" data-ajax="true" enctype="multipart/form-data"
      data-ajax-method="POST"
      data-ajax-mode="replace"
      data-ajax-complete="EndCatagoryCreate()"
      data-ajax-update="#ajaxresult">
    <input name="BannerId" value="@Model.BannerId" type="hidden" asp-for="BannerId" />
    <input name="ImageUrl" value="@Model.ImageUrl" type="hidden" asp-for="ImageUrl" />
    <div class="modal-body">
        <div class="form-row">
            <div class="form-group col-md-3">
                <label>نام</label>
                <input class="form-control form-control-sm" asp-for="Name" placeholder="مثال: اسلایدر1">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="form-group col-md-3">
                <label>نام عربی</label>
                <input class="form-control form-control-sm" asp-for="NameAr" placeholder="مثال: اسلایدر1">
                <span class="text-danger" asp-validation-for="NameAr"></span>
            </div>
            <div class="form-group col-md-3">
                <label>نام انگلیسی</label>
                <input class="form-control form-control-sm" asp-for="NameEn" placeholder="SLider ">
                <span class="text-danger" asp-validation-for="NameEn"></span>
            </div>
        </div>
        <label class="mt-2">تصویر اسلایدر</label>
        <br />
        <div class="custom-file col-md-7" style="margin:70px;height:150px;">
            <img src="~/Images/Country/@Model.ImageUrl" alt="@Model.Name" style="max-height: 150px !important;display:block; margin: 0 auto" />
        </div>
        <div class="custom-file col-md-7">
            <input type="file" class="custom-file-input form-control form-control-sm" accept="image/x-png,image/gif,image/jpeg"  onchange="inputChanged(this)" name="image" id="image">
            <label class="custom-file-label" for="Image" data-browse="انتخاب" id="FileNameimage">انتخاب تصویر</label>
        </div>
    </div>
    <div class="modal-footer justify-content-end">
        <button type="submit" class="btn btn-success btn-sm text-white">ویرایش<span class="icon-holder uk-margin-small-right" uk-icon="add-circle-outline"></span></button>
    </div>
</form>

<script src="~/Validate/jquery.validate.min.js"></script>
<script src="~/Validate/jquery.validate.unobtrusive.js"></script>
<script>

    function inputChanged(sender) {
        var fileName = sender.files[0].name;
        sender.parentElement.querySelector('.custom-file-label').innerHTML = fileName;
    }
</script>