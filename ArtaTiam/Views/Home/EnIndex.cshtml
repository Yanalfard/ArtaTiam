
@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_EnLayout.cshtml";
}


<link href="~/Owl/owl.carousel.min.css" rel="stylesheet" />
<link href="~/Owl/owl.theme.default.min.css" rel="stylesheet" />


<script src="~/Jquery/jquery.min.js"></script>
<script src="~/Owl/owl.carousel.js"></script>
<link href="~/css/Index.min.css" rel="stylesheet" />
<link href="~/css/EnVersion.min.css" rel="stylesheet" />
<section class="header-section">
    <!--Carousel Wrapper-->
    <div id="carousel-thumb" class="carousel carousel-thumbnails slide" data-ride="carousel" data-interval="5000" data-pause="false">
        <!--Slides-->
        @await Component.InvokeAsync("SliderHomeEnComponent")
      
    </div>

    <!--/.Carousel Wrapper-->
    @if (User.Identity.IsAuthenticated)
    {

        <div class="edit-admin pb-2 pl-2 pr-2">
            <hr />
            <a href="/Admin/Slider" class="btn  btn-info mr-auto pl-3 float-left pr-3 mytext-white"><i uk-icon="create-outline"></i>ویرایش</a>
        </div>
    }
</section>

<!--introduction section-->

@await Component.InvokeAsync("MoarefyeSherkatHomeEnComponent")

<!--flag section-->
@await Component.InvokeAsync("CountryHomeEnComponent")



<!--video section-->
@*@await Component.InvokeAsync("VideoSectionHomeEnComponent")*@

<!--service section-->
