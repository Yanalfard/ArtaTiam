@model ConfigVm

@{
    ViewData["Title"] = " اضافه کردن ویدیو ";
}

<div class="row flex-div">
    <div class="col-md-12 flex-div pb-3 pt-3">
        <div class="card flex-div border-0 main-shadow">
            <div class="card-header bg-white">
            </div>
            <div id="card-table" class="card-body flex-div">
                <form class="form-row mt-3 fixed overflow-auto" asp-action="VideoSectionHome" asp-controller="Config" enctype="multipart/form-data">
                    <div class="form-group col-lg-12 mt-lg-3">
                        <label> متن و ویدیو در صفحه اصلی :</label>
                        <textarea asp-for="VideoSectionHomeText" class="form-control form-control-sm d-inline-block d-sm-block col-lg-12" placeholder="..."></textarea>
                        <br /><span class="text-danger" asp-validation-for="VideoSectionHomeText"></span>
                    </div>
                    <div class="form-group col-lg-12 mt-lg-3">
                        <label> متن و ویدیو در صفحه اصلی انگلیسی :</label>
                        <textarea dir="ltr" asp-for="VideoSectionHomeTextEn" class="form-control form-control-sm d-inline-block d-sm-block col-lg-12" placeholder="..."></textarea>
                        <br /><span class="text-danger" asp-validation-for="VideoSectionHomeTextEn"></span>
                    </div>
                    <div class="form-group col-lg-12 mt-lg-3">
                        <video class="my-center" controls>
                            <source src="~/Images/VideoSectionHome/@Model.VideoSectionHomeImg" type="video/mp4" />
                        </video>
                    </div>
                    <label class="mt-2">تصویر </label>
                    <br />
                    <div class="custom-file col-md-12">
                        <input type="file" name="ImageUrl" id="ImageUrl" class="custom-file-input form-control form-control-sm"  onchange="inputChanged(this)">
                        <label class="custom-file-label" for="Image" data-browse="انتخاب" id="FileName">انتخاب تصویر</label>
                    </div>

                    <div class="modal-footer justify-content-end">
                        <button type="submit" class="btn btn-success btn-sm text-white">ثبت<span class="icon-holder uk-margin-small-right" uk-icon="add-circle-outline"></span></button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>



