
@{
    ViewData["Title"] = "خانه";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link href="~/Owl/owl.carousel.min.css" rel="stylesheet" />
<link href="~/Owl/owl.theme.default.min.css" rel="stylesheet" />

<script src="~/Jquery/jquery.min.js"></script>
<script src="~/Owl/owl.carousel.js"></script>
<link href="~/css/Index.min.css" rel="stylesheet" />
<section class="header-section">
    <!--Carousel Wrapper-->
    <div id="carousel-thumb" class="carousel carousel-thumbnails slide" data-ride="carousel" data-interval="5000" data-pause="false">
        <!--Slides-->
        @await Component.InvokeAsync("SliderHomeComponent")
    </div>
    <!--/.Carousel Wrapper-->
    @if (User.Identity.IsAuthenticated)
    {
        <div class="edit-admin pb-2 pl-2 pr-2">
            <hr />
            <a href="/Admin/Slider" class="btn btn-info mr-auto pl-3 float-left pr-3 mytext-white"><i uk-icon="create-outline"></i>ویرایش</a>
        </div>
    }
</section>

<!--introduction section-->

@await Component.InvokeAsync("MoarefyeSherkatHomeComponent")


<!--flag section-->

@await Component.InvokeAsync("CountryHomeComponent")


<!--video section-->
@*@await Component.InvokeAsync("VideoSectionHomeComponent")*@

<!--service section-->
<div class="pt-5" id="Services"></div>
<section class="service-section my-center">
    <div class="service-container">
        <h3 class="text-center my-center mb-5">
            <span class="my-center">
                خدمات
            </span>
        </h3>
        <p class="paragragh text-right pr-2 pr-md-5 pl-1" style="font-weight:bold">
            ما افتخار این را داریم که جهت تسهیل امور تجار ، ارتباط کارا و بازدهی کیفی و کمی ایده آل صفر تا صد پروسه صادرات و واردات شما را انجام دهیم اعم از
        </p>
        <div class="pl-1 col-md-12 pr-md-5" dir="rtl">
            <div class="row">
                <div class="general-services col-md-4 my-row mt-3">
                    <div class="service-number-bg ">
                        <div class="service-number mt-2">1</div>
                    </div>
                    <label class="mr-2 mt-2 text-right">
                        <span class="text-Bold">عقد قرارداد</span> (به زبان های مختلف به صورت قانونی و حقوقی)
                    </label>
                </div>
                <div class="general-services col-md-4 my-row mt-3">
                    <div class="service-number-bg">
                        <div class="service-number mt-2">2</div>
                    </div>
                    <label class="mr-2 mt-2 text-Bold text-right">
                        تامین کالا
                    </label>
                </div>
                <div class="general-services col-md-4 my-row mt-3">
                    <div class="service-number-bg">
                        <div class="service-number mt-2">3</div>
                    </div>
                    <label class="mr-2 mt-2 text-Bold text-right">
                        سورت و بسته بندی اختصاصی و عمومی
                    </label>
                </div>
                <div class="general-services col-md-4 my-row mt-3">
                    <div class="service-number-bg">
                        <div class="service-number mt-2">4</div>
                    </div>
                    <label class="mr-2 mt-2 text-right">
                        <span class="text-Bold"> حمل داخلی</span> ( تک مرحله ای و چند مرحله ای )
                    </label>
                </div>
                <div class="general-services col-md-4 my-row mt-3">
                    <div class="service-number-bg">
                        <div class="service-number mt-2">5</div>
                    </div>
                    <label class="mr-2 mt-2 text-Bold text-right">
                        ترخیص در تمامی مرزها و بنادر ایران
                    </label>
                </div>
                <div class="general-services col-md-4 my-row mt-3">
                    <div class="service-number-bg">
                        <div class="service-number mt-2">6</div>
                    </div>
                    <label class="mr-2 mt-2 text-Bold text-right">
                        گمرک
                    </label>
                </div>
                <div class="general-services col-md-4 my-row mt-3">
                    <div class="service-number-bg">
                        <div class="service-number mt-2">7</div>
                    </div>
                    <label class="mr-2 mt-2 text-right">
                        <span class="text-Bold"> حمل خارجی</span> ( زمینی و دریایی ) و...
                    </label>
                </div>
            </div>
        </div>
        <p class="paragragh text-right pr-2 pr-md-5 pl-1 mt-4 mb-5 " style="font-weight:bold">
            . این اطمینان خاطر را به تجار میدهیم که در نهایت سلامت بار ، در اسرع وقت ، بصورت رسمی و قانونی با گارانتی کامل بار سفارش درخواستی شما را انجام دهیم
        </p>
    </div>
    <div class="edit-admin pb-5 pl-2 pr-2 pl-md-5 pr-md-5 d-none">
        <hr />
        <a class="btn btn-info mr-auto pl-3 float-left pr-3 mytext-white"><i uk-icon="create-outline"></i>ویرایش</a>
    </div>
</section>


<!--our service section-->
<h3 class="text-center our-service-h3 my-center mb-5">
    <span class="my-center">
        خدمات ما
    </span>
</h3>
<section class="our-service-section my-center pb-5">

    <div class="our-service-container grid my-center">
        <div class="greenCard my-center">
            <div class="whiteCard my-column my-center">
                <img class="my-center mt-5" src="~/img/index/services/marketing-logo.png" alt="img" />
                <label class="mt-3 text-08"> بازاریابی محصولات متقاضیان  </label>
            </div>
            <i class=" next-ser-icon d-none d-md-block absolute" uk-icon="chevron-forward"></i>
        </div>
        <div class="greenCard my-center">
            <div class="whiteCard my-column my-center">
                <img class="my-center mt-5" src="~/img/index/services/air-earth.png" alt="img" />
                <label class="mt-3 text-08"> قبول سفارش های تجار خارجی و داخلی از اقصی نقاط دنیا   </label>
            </div>
            <i class=" next-ser-icon d-none d-md-block absolute" uk-icon="chevron-forward"></i>
        </div>
        <div class="greenCard my-center">
            <div class="whiteCard my-column my-center">
                <img class="my-center mt-5" src="~/img/index/services/delivery.png" alt="img" />
                <label class="mt-3 text-08"> صادرات محصولات شما به کشور مقصد متقاضی </label>
            </div>
            <i class=" next-ser-icon d-none d-md-block absolute" uk-icon="chevron-forward"></i>
        </div>
        <div class="greenCard my-center">
            <div class="whiteCard my-column my-center">
                <img class="my-center mt-5" src="~/img/index/services/done.png" />
                <label class="mt-3 text-08"> انجام امور کلیه مراحل صفر تا صد مبداً تا مقصد صادرات و واردات   </label>
            </div>

        </div>
    </div>
    <!--link for Export-->
    <div id="Export"></div>
    <div class="edit-admin pb-2 pl-4 pr-4 d-none" style="opacity:1!important;  backdrop-filter: opacity(1) !important;">
        <hr />
        <a class="btn btn-info mr-auto pl-3 float-left pr-3 mytext-white"><i uk-icon="create-outline"></i>ویرایش</a>
    </div>
</section>
@*export and import section*@
<section class="export-import-section">
    <h3 class="text-center my-center mb-4">
        <span class="my-center">
            صادرات
        </span>
    </h3>
    <div class="ex-im-container grid my-center" dir="rtl">
        <div class="whiteCard my-column my-center">
            <img class="float-left ml-2 mr-auto" src="~/img/Logo.png" width="100" alt="logo" />
            <img class="ex-im-img" src="~/img/index/export-import/miveh.jpg" alt="img" />
            <p class="paragragh mt-2">
                میوه های چهار فصل از تمام نقاط ایران به بصورت تازه ( مزرعه ) ، سردخانه ، سورت شده ، خشک ، فرآوری شده و ...
            </p>
        </div>

        <div class="whiteCard my-column my-center">
            <img class="float-left ml-2 mr-auto" src="~/img/Logo.png" width="100" alt="logo" />
            <img class="ex-im-img" src="~/img/index/export-import/products.jpg" alt="img" />
            <p class="paragragh mt-2">
                گروه مواد غذایی : تولیدات عمومی و سفارشات کارخانجات و تولید کنندگان ایرانی همانند : کنسرو ماهی ، رب گوجه فرنگی ، ترشیجات ، سس ، آبنبات ، شکلات ، نبات و ...
            </p>
        </div>

        <div class="whiteCard my-column my-center">
            <img class="float-left ml-2 mr-auto" src="~/img/Logo.png" width="100" alt="logo" />
            <img class="ex-im-img" src="~/img/index/export-import/vegetables.jpg" alt="img" />
            <p class="paragragh mt-2">
                سبزیجات ، صیفی جات
            </p>
        </div>

        <div class="whiteCard my-column my-center">
            <img class="float-left ml-2 mr-auto" src="~/img/Logo.png" width="100" alt="logo" />
            <img class="ex-im-img" src="~/img/index/export-import/garden.jpg" alt="img" />
            <p class="paragragh mt-2">
                محصولات نو آوری شده کشاورزی و باغی
            </p>
            <!--link for import-->
            <span class="" id="Import"></span>
        </div>

    </div>

    <h3 class="text-center my-center mb-4 mt-4">
        <span class="my-center">
            واردات
        </span>
    </h3>
    <div class="ex-im-container grid my-center" dir="rtl">
        <div class="my-center">
            <div class="whiteCard my-column my-center" dir="rtl">
                <img class="float-left ml-2 mr-auto" src="~/img/Logo.png" width="100" alt="logo" />
                <img class="ex-im-img" src="~/img/index/export-import/import.jpg" alt="img" />
                <p class="paragragh mt-2 text-08 text-Bold">
                    ورود محصولات کشاورزی و باغی به کشور ایران و یا سایر کشورهای همجوار همانند شکر برزیل به عراق ، انبه پاکستان به ترکیه و ..
                </p>
            </div>
        </div>
    </div>
    <div class="edit-admin pb-2 pl-2 pr-2 pl-md-5 pr-md-5 d-none">
        <hr />
        <a class="btn btn-info mr-auto pl-3 float-left pr-3 mytext-white"><i uk-icon="create-outline"></i>ویرایش</a>
    </div>
</section>


<script>
    $('.owl-carousel').owlCarousel({
        loop: true,
        margin: 10,
        nav: true,
        autoplay: true,
        autoplayTimeout: 2000,
        autoplayHoverPause: false,
        rtl: true,
        responsive: {
            0: {
                items: 3
            },
            600: {
                items: 5
            },
            1000: {
                items: 8
            }
        }
    })

</script>
