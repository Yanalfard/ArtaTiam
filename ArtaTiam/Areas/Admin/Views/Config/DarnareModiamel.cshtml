@model ConfigVm

@{
    ViewData["Title"] = " درباره مدیرعامل ";
}

<div class="row flex-div">
    <div class="col-md-12 flex-div pb-3 pt-3">
        <div class="card flex-div border-0 main-shadow">
            <div class="card-header bg-white">
            </div>
            <div id="card-table" class="card-body flex-div">
                <form class="form-row mt-3 fixed overflow-auto" asp-action="DarnareModiamel" asp-controller="Config" enctype="multipart/form-data">
                    <div class="form-group col-lg-12 mt-lg-3">
                        <label> درباره مدیرعامل  :</label>
                        <textarea asp-for="DarnareModiamelText" id="DarnareModiamelText" class="form-control form-control-sm d-inline-block d-sm-block col-lg-12" placeholder="..."></textarea>
                        <br /><span class="text-danger" asp-validation-for="DarnareModiamelText"></span>
                    </div>
                    <div class="form-group col-lg-12 mt-lg-3">
                        <label> درباره مدیرعامل انگلیسی  :</label>
                        <textarea asp-for="DarnareModiamelTextEn" id="DarnareModiamelTextEn" class="form-control form-control-sm d-inline-block d-sm-block col-lg-12" placeholder="..."></textarea>
                        <br /><span class="text-danger" asp-validation-for="DarnareModiamelTextEn"></span>
                    </div>
                    <div class="form-group col-lg-12 mt-lg-3">
                        <img style="max-width:250px;margin:0 auto;display:block" src="~/Images/DarnareModiamelImg/@Model.DarnareModiamelImg" alt="Alternate Text" />
                    </div>
                    <label class="mt-2">تصویر </label>
                    <br />
                    <div class="custom-file col-md-12">
                        <input type="file" name="ImageUrl" id="ImageUrl" class="custom-file-input form-control form-control-sm" accept="image/x-png,image/gif,image/jpeg" onchange="inputChanged(this)">
                        <label class="custom-file-label" for="Image" data-browse="انتخاب" id="FileName">انتخاب تصویر</label>
                    </div>

                    <div class="modal-footer justify-content-end">
                        <button type="submit" class="btn btn-success btn-sm text-white">ثبت<span class="icon-holder uk-margin-small-right" uk-icon="add-circle-outline"></span></button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>


@section Script{
    <script src="~/js/ckeditor/ckeditor.js"></script>
    <script src="~/js/ckeditor/adapters/jquery.js"></script>
    <script>
        $(function () {
            $('#DarnareModiamelText').ckeditor();
            $('#DarnareModiamelTextEn').ckeditor();
        });


    </script>

}


